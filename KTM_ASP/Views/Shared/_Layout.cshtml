<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KTM_ASP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KTM_ASP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


    <style>

    </style>

</head>

<body class="bg-custom text-white">
    <header class="bg-white">
        <nav class="container d-flex align-items-center justify-content-between py-3">
            <!-- Logo -->
            <h1 class="text-warning fw-bold mb-0">
                OH!<span style="color: #388B6F;">NAD.</span>
            </h1>

            <!-- Menu căn giữa -->
            <ul class="nav d-flex align-items-center mb-0">
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="nav-item"><a class="nav-link text-dark">Về chúng tôi</a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Interiors" asp-action="Index">Sản phẩm</a></li>
                <li class="nav-item"><a class="nav-link text-dark">Blog</a></li>
                <li class="nav-item"><a class="nav-link text-dark">Hệ thống</a></li>
                <li class="nav-item"><a class="nav-link text-dark">Dự án</a></li>
            </ul>

            <div class="d-flex align-items-center gap-3">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                </form>
                <a href="/account" class="text-dark d-flex align-items-center">
                    <i class="bi bi-github fs-5 me-1"></i> Đăng nhập
                </a>
            </div>

        </nav>
    </header>


    <div class="container-fluid">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>
    <footer class="text-center py-4 mt-5">
        <p><a class="text-black">Designed By:</a> <a href="#" class="text-decoration-none text-warning">NAD Coding</a></p>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>